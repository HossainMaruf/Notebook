<%- include('../includes/Header'); -%>
<%- include('../includes/Navbar'); -%>
<h1 class="text-center">Registration Form</h1>
<div class="container w-50 bg-light p-5">
<form method="POST" action="/signup">
  <div class="form-group">
    <label for="username">Username</label>
    <% if(errors.username) { %>
      <input type="text" name="username" class="form-control is-invalid" value="<%= old.username %>" id="username" aria-describedby="emailHelp" placeholder="Username">
      <div class="invalid-feedback"><%= errors.username %></div>
    <% } else {%>
      <input type="text" name="username" class="form-control" value="<%= old.username %>" id="username" aria-describedby="emailHelp" placeholder="Username">
      <% } %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <% if(errors.email) { %>
      <input type="email" name="email" class="form-control is-invalid" value="<%= old.email %>" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
      <div  class="invalid-feedback"><%= errors.email %></div>
    <% } else {%>
      <input type="email" name="email" class="form-control" value="<%= old.email %>" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
      <% } %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <% if(errors.password) { %>
      <input type="password" name="password" class="form-control is-invalid" value="<%= old.password %>" id="exampleInputPassword1" placeholder="Enter a strong password">
      <div class="invalid-feedback"><%= errors.password %></div>
    <% } else {%>
      <input type="password" name="password" class="form-control" value="<%= old.password %>" id="exampleInputPassword1" placeholder="Enter a strong password">
      <% } %>
  </div>
  <div class="form-group">
    <label for="confirmPassword">Confirm Password</label>
    <% if(errors.confirmPassword) { %>
      <input type="password" name="confirmPassword" class="form-control is-invalid" value="<%= old.confirmPassword %>" id="confirmPassword" placeholder="Type password again">
      <div class="invalid-feedback"><%= errors.confirmPassword %></div>
    <% } else {%>
      <input type="password" name="confirmPassword" class="form-control" value="<%= old.confirmPassword %>" id="confirmPassword" placeholder="Type password again">
      <% } %>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>

<%- include('../includes/Footer'); -%>